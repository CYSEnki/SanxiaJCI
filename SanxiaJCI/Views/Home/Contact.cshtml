@*
    JCI Sanxia - Contact Page
    聖誕交接典禮特別版 2025/12/25
    
    檔案結構：
    - Contact.cshtml (HTML 結構)
    - jci-contact.css (樣式)
    - jci-contact.js (互動效果)
    - 需搭配 jci-christmas.css (共用 CSS 變數)
*@
@{
    ViewData["Title"] = "聯絡我們";
}

<!-- 樣式載入 -->
<link href="https://fonts.googleapis.com/css2?family=Noto+Sans+TC:wght@300;400;500;700;900&family=Playfair+Display:wght@400;600;700&display=swap" rel="stylesheet">
<link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
<link href="~/css/jci-christmas.css" rel="stylesheet" />
<link href="~/css/jci-contact.css" rel="stylesheet" />

<!-- Hero 區塊 -->
<section class="contact-hero">
    <div class="container">
        <div class="contact-hero-content" data-aos="fade-up">
            <div class="contact-hero-badge">
                <span>📞 與我們聯繫</span>
            </div>
            <h1>聯絡我們</h1>
            <p>加入三峽國際青年商會，與我們一同推動地方創生與青年影響力。歡迎透過以下方式與我們聯繫！</p>
        </div>
    </div>
</section>

<!-- 地圖區塊 -->
<section class="map-section">
    <div class="map-wrapper" data-aos="zoom-in">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3617.997605970649!2d121.37410012380533!3d24.932151474000168!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x34681bed9d47b731%3A0x43e60ae21deaab4b!2zMjM35paw5YyX5biC5LiJ5bO95Y2A5Lit6I-v6LevMTHlt7cx6Jmf!5e0!3m2!1szh-TW!2stw!4v1765605449011!5m2!1szh-TW!2stw" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
    </div>
</section>

<!-- 聯絡內容區塊 -->
<section class="contact-content-section">
    <div class="container">
        <div class="row align-items-start">
            <!-- 表單 -->
            <div class="col-lg-5 col-md-6" data-aos="fade-right">
                <div class="contact-form-card">
                    <span class="christmas-decoration top-left">🎄</span>
                    <span class="christmas-decoration bottom-right">⭐</span>

                    <div class="form-overlay" id="form-overlay">
                        <div class="form-spinner"></div>
                    </div>

                    <h3>寄送訊息</h3>

                    <form id="contact-form" class="contact-form">
                        <p id="error-msg" class="text-danger mb-3"></p>
                        <div id="simple-msg"></div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label">您的姓名 <span class="text-danger">*</span></label>
                                <input name="name" id="name" type="text" class="form-control" placeholder="請輸入姓名">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label">電子郵件 <span class="text-danger">*</span></label>
                                <input name="email" id="email" type="email" class="form-control" placeholder="請輸入 Email">
                            </div>
                            <div class="col-12 mb-3">
                                <label class="form-label">職業</label>
                                <input name="subject" id="subject" type="text" class="form-control" placeholder="請輸入您的職業">
                            </div>
                            <div class="col-12 mb-4">
                                <label class="form-label">信件內容 <span class="text-danger">*</span></label>
                                <textarea name="comments" id="comments" rows="5" class="form-control" placeholder="請輸入您想詢問的內容..."></textarea>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn-submit">
                                    寄送訊息
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <!-- 聯絡資訊 -->
            <div class="col-lg-7 col-md-6" data-aos="fade-left">
                <div class="contact-info-wrapper">
                    <div class="contact-info-header">
                        <h2>保持聯繫</h2>
                        <p>我們致力於打造具行動力與社會責任感的青年平台。無論您有任何問題或想加入我們，都歡迎透過以下方式聯繫！</p>
                    </div>

                    <!-- 電子郵件 -->
                    <div class="contact-item">
                        <div class="contact-item-icon">
                            <svg viewBox="0 0 24 24">
                                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
                            </svg>
                        </div>
                        <div class="contact-item-content">
                            <h5>電子郵件</h5>
                            <a href="mailto:hang543125@gmail.com">hang543125@gmail.com</a>
                        </div>
                    </div>

                    <!-- 連絡電話 -->
                    <div class="contact-item">
                        <div class="contact-item-icon">
                            <svg viewBox="0 0 24 24">
                                <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z" />
                            </svg>
                        </div>
                        <div class="contact-item-content">
                            <h5>連絡電話</h5>
                            <a href="tel:0900543125">0900-543-125</a>
                        </div>
                    </div>

                    <!-- 地址 -->
                    <div class="contact-item">
                        <div class="contact-item-icon">
                            <svg viewBox="0 0 24 24">
                                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" />
                            </svg>
                        </div>
                        <div class="contact-item-content">
                            <h5>會館地址</h5>
                            <p>新北市三峽區中華路11巷1號</p>
                        </div>
                    </div>

                    <!-- 服務時間 -->
                    <div class="contact-item">
                        <div class="contact-item-icon">
                            <svg viewBox="0 0 24 24">
                                <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z" />
                            </svg>
                        </div>
                        <div class="contact-item-content">
                            <h5>月例會時間</h5>
                            <p>每月第一週禮拜五（以實際發文為準）</p>
                        </div>
                    </div>

                    <!-- 社群連結 -->
                    <div class="social-links">
                        <h5>追蹤我們</h5>
                        <div class="social-icons">
                            <a href="https://www.facebook.com/sanxiajci" target="_blank" rel="noopener noreferrer" class="social-icon" title="Facebook">
                                <svg viewBox="0 0 24 24">
                                    <path d="M22 12c0-5.52-4.48-10-10-10S2 6.48 2 12c0 4.84 3.44 8.87 8 9.8V15H8v-3h2V9.5C10 7.57 11.57 6 13.5 6H16v3h-2c-.55 0-1 .45-1 1v2h3v3h-3v6.95c5.05-.5 9-4.76 9-9.95z" />
                                </svg>
                            </a>
