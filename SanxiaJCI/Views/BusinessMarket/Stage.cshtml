@{
    ViewData["Title"] = "交通方式";
}
<!-- Start Contact -->
<section class="section pt-5 mt-4">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 p-0">
                <div class="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3617.9771289572204!2d121.36663677539333!3d24.932849042357095!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x34681bee247a249f%3A0x9752a962d5f705eb!2z5LiJ5bO96IiI6ZqG5a6u5aq956WW5buf!5e0!3m2!1szh-TW!2stw!4v1750770526249!5m2!1szh-TW!2stw" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
            </div><!--end col-->
        </div><!--end row-->
    </div><!--end container-->

    <div class="container mt-100 mt-60">

        <div class="container">
            <div class="section-title text-center">
                <h2 class="mb-4">交通資訊</h2>
                <p class="text-muted">活動日期：2025年7月26日 10:00 ~ 15:00</p>
                <p class="text-muted">前往活動地點：新北市三峽區民權街92號（三峽興隆宮前廣場）</p>
            </div>

            <div class="row g-4">

                <!-- 汽車 -->
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5><i class="fas fa-car me-2 text-primary"></i>自行開車</h5>
                            <p class="mb-2">導航設定至「三峽興隆宮」或輸入地址：新北市三峽區民權街92號。</p>
                            <ul class="mb-0">
                                <li>國道三號 → 三鶯交流道下</li>
                                <li>停車建議：三峽區農會停車場、三峽國小地下停車場</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- 機車 -->
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5><i class="fas fa-motorcycle me-2 text-danger"></i>騎機車</h5>
                            <p class="mb-2">建議停放於民權街、和平街周邊機車格。</p>
                            <ul class="mb-0">
                                <li>假日人潮眾多，建議提早出發</li>
                                <li>從三峽國小或老街口進入最佳</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- 大眾運輸 -->
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm border-0">
                        <div class="card-body">
                            <h5><i class="fas fa-bus-alt me-2 text-success"></i>大眾運輸</h5>
                            <p class="mb-2">搭乘捷運至永寧站1號出口，轉乘以下公車：</p>
                            <ul>
                                <li>916、922、940、藍43 等至「三峽國小」站</li>
                                <li>從台北/板橋：705、802、852 等直達三峽</li>
                            </ul>
                            <a href="https://www.tpebus.com.tw" target="_blank" class="btn btn-outline-primary btn-sm mt-2">查詢公車時刻表</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div><!--end container-->
</section><!--end section-->
<!-- End contact -->
