            { name: "張鈞皓", position: "理事", company: "冠味餐飲有限公司", title: "負責人", industry: "餐飲" },
            { name: "蘇家潁", position: "理事", company: "星繫系統科技有限公司", title: "總經理", industry: "科技" },
            { name: "周畯竑", position: "理事", company: "輔仁大學", title: "模特", industry: "" },
