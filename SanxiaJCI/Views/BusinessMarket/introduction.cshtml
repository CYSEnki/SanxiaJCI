    <!-- ========== Slide 10: 活動設計元素 ========== -->
    <section class="slide slide--content">
        <div class="slide-inner">
            <div class="slide__header">
                <span class="slide__number">09</span>
                <h2 class="slide__title">案例拆解：活動設計元素</h2>
