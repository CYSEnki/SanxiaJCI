            { name: "楊弦斌", position: "會員", company: "順鋒國際餐飲有限公司", title: "負責人", industry: "餐飲" },
            { name: "黃偉倫", position: "會員", company: "U3CENTER SPA", title: "負責人", industry: "美容" },
            { name: "林翊峰", position: "會員", company: "", title: "", industry: "" },
            { name: "吳家豪", position: "會員", company: "粥族廣東粥", title: "負責人", industry: "餐飲" },
            { name: "張怡如", position: "會員", company: "不動產", title: "經理人", industry: "零售" },
