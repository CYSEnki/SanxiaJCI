            { name: "王郁文", position: "見習會員", company: "", title: "律師", industry: "專業服務" }
        ];

        // 職位分類
        const positionGroups = {
            '幹部': ['會長', '輔導會長', '法治顧問', '秘書長', '財務長', '副會長', 'OB主席'],
            '理監事': ['常務監事', '監事', '理事'],
            '會員': ['會員', '見習會員'] 
        };

        // 是否為幹部
        function isLeader(position) {
            return ['會長', '輔導會長', '秘書長', '財務長', '副會長'].includes(position);
        }

        // 建立會員卡片
        function createCard(m) {
            const avatarClass = isLeader(m.position) ? 'member-card__avatar member-card__avatar--leader' : 'member-card__avatar';
            return `
                <div class="member-card">
                    <div class="${avatarClass}">${m.name.charAt(0)}</div>
                    <div class="member-card__info">
                        <div class="member-card__name">${m.name}</div>
                        <span class="member-card__position">${m.position}</span>
                        ${m.company ? `<div class="member-card__company">${m.company}${m.title ? ' · ' + m.title : ''}</div>` : ''}
                    </div>
                </div>
            `;
        }

        // 建立分組
        function createGroup(title, list) {
            if (!list.length) return '';
            return `
                <div class="member-group">
                    <h4 class="member-group__title">${title} <span class="member-group__badge">${list.length} 位</span></h4>
                    <div class="member-list">${list.map(createCard).join('')}</div>
                </div>
            `;
        }

        // 篩選會員
        function filterMembers(filter) {
            if (filter === 'all') return members;
            if (positionGroups[filter]) {
                return members.filter(m => positionGroups[filter].includes(m.position));
            }
            return members.filter(m => m.industry && m.industry.includes(filter));
        }

        // 渲染 Modal
        function renderModal(filter) {
            const body = document.getElementById('modalBody');
            const count = document.getElementById('memberCount');
            const title = document.getElementById('modalTitle');

            const filtered = filterMembers(filter);
            let html = '';

            const titles = {
                'all': '全部會員名錄', '幹部': '幹部團隊', '理監事': '理監事會', '會員': '一般會員',
                '餐飲': '餐飲業', '金融保險': '金融保險業', '專業服務': '專業服務業',
                '製造工程': '製造/工程業', '零售': '零售百貨業', '公職': '公職/政治',
                '科技': '科技業', '媒體': '媒體影音', '美容': '美容SPA'
            };
            title.textContent = titles[filter] || '會員名錄';

            if (filter === 'all') {
                html += createGroup('幹部團隊', filtered.filter(m => positionGroups['幹部'].includes(m.position)));
                html += createGroup('理監事會', filtered.filter(m => positionGroups['理監事'].includes(m.position)));
                html += createGroup('一般會員', filtered.filter(m => positionGroups['會員'].includes(m.position)));
            } else {
                html = `<div class="member-list">${filtered.map(createCard).join('')}</div>`;
            }

            body.innerHTML = html || '<p style="text-align:center;color:#64748b;padding:40px;">此分類暫無資料</p>';
            count.textContent = `共 ${filtered.length} 位會員`;
        }

        // 開啟 Modal
        function openModal(filter = 'all') {
            document.getElementById('memberModal').classList.add('is-active');
            document.body.style.overflow = 'hidden';
            updateTabs(filter);
            renderModal(filter);
        }

        // 關閉 Modal
        function closeModal() {
            document.getElementById('memberModal').classList.remove('is-active');
            document.body.style.overflow = '';
        }

        // 切換 Tab
        function switchTab(tab) {
            updateTabs(tab);
            renderModal(tab);
        }

        // 更新 Tab 狀態
        function updateTabs(active) {
            document.querySelectorAll('.modal__tab').forEach(t => {
                t.classList.toggle('is-active', t.dataset.tab === active);
            });
        }

        // 點擊外部關閉
        document.getElementById('memberModal').addEventListener('click', function(e) {
            if (e.target === this) closeModal();
        });

        // ESC 關閉
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') closeModal();
        });
    </script>
